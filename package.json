{
  "name": "asgard-frontend-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.vue,.json",
    "lint:fix": "pnpm lint --fix",
    "type-check": "vue-tsc --noEmit",
    "dep:check": "pnpm dlx npm-check-updates",
    "dep:update": "pnpm dlx npm-check-updates -u && pnpm install",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "release:ci": "pnpm run build && pnpm run release",
    "prepare": "husky"
  },
  "dependencies": {
    "vue": "^3.5.22",
    "vue-router": "^4.6.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "husky": "^9.1.7",
    "less": "^4.4.2",
    "lint-staged": "^16.2.4",
    "modern-normalize": "^3.0.1",
    "semantic-release": "^24.2.9",
    "typescript": "~5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "unplugin-vue-router": "^0.16.0",
    "vite": "^7.1.10",
    "vue-tsc": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js,json,md,yml}": "eslint --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
          "gitOptions": {
            "signed": true
          }
        }
      ]
    ]
  }
}
